rules_version = '2';

// Read rules can be divided into get and list rules
// Write rules can be divided into create, update, and delete rules

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document
    // But can read other users for discovery and social features
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }

    match /events/{eventUid}/participants/{participantUid} {
      allow read, write: if true;
    }
  }
}
